@page
 
<!-- 2. Conteúdo Principal -->
<main class="container mt-4 mb-5">
 
    <!-- Jumbotron / Hero -->
    <div class="jumbotron">
        <form asp-action="CadastrarJogador" asp-controller="Cliente" method="POST">
 
            <div class="row mb-3">
                <div class="col-md-8">
                    <label for="nome" class="form-label">Nome Completo / Razão Social</label>
                    <input type="text" class="form-control" id="nome" name="nome" required>
                </div>
                <div class="col-md-4">
                    <label for="tipo" class="form-label">Tipo de Entrega
                    </label>
                    <select class="form-select" id="tipo" name="tipo" required>
                        <option value="" disabled selected>Selecione...</option>
                        <option value="EL">Entrega na Loja</option>
                        <option value="EE">Entrega na Empresa</option>
                    </select>
                </div>
            </div>
 
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="documento" class="form-label">CNPJ</label>
                    <input type="text" class="form-control" id="documento" name="documento" placeholder="Apenas números"
                        required>
                </div>
                <div class="col-md-6">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="telefone" class="form-label">Telefone</label>
                    <input type="tel" class="form-control" id="telefone" name="telefone">
                    <div class="row mb-3">
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success btn-lg me-2">Salvar Cliente</button>
                        <a href="index.cshtml" class="btn btn-secondary btn-lg">Cancelar</a>
                    </div>
        </form>
    </div>
 
    <!-- Cards de Acesso Rápido -->
 
 
    <!-- Tabela de Clientes -->
    <h2 class="mt-5 mb-3">Lista de Clientes Cadastrados</h2>
    <div class="carta">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead>
                <tr class="table-primary">
                    <th scope="col">ID</th>
                    <th scope="col">Nome do Cliente</th>
                    <th scope="col">CPF/CNPJ</th>
                    <th scope="col">Status</th>
                    <th scope="col">Última Atualização</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">101</th>
                    <td>Transportadora Ágil LTDA</td>
                    <td>12.345.678/0001-90</td>
                    <td><span class="badge bg-success">Ativo</span></td>
                    <td>25/11/2025</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-info text-white me-1">Ver</a>
                        <a href="#" class="btn btn-sm btn-warning me-1">Editar</a>
                        <button class="btn btn-sm btn-danger">Excluir</button>
                    </td>
                </tr>
                <tr>
                    <th scope="row">102</th>
                    <td>Distribuidora Oeste S.A.</td>
                    <td>98.765.432/0001-00</td>
                    <td><span class="badge bg-warning text-dark">Pendente</span></td>
                    <td>18/11/2025</td>
                    <td>
                        <a href="#" class="btn btn-sm btn-info text-white me-1">Ver</a>
                        <a href="#" class="btn btn-sm btn-warning me-1">Editar</a>
                        <button class="btn btn-sm btn-danger">Excluir</button>
                    </td>
                </tr>
                <!-- Mais linhas seriam carregadas aqui do seu sistema -->
