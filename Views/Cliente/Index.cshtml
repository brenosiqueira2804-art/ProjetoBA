@page
 
<!-- 2. Conteúdo Principal -->
<main class="container mt-4 mb-5">
 
    <!-- Jumbotron / Hero -->
    <div class="jumbotron">
        <form  asp-action="Cadastrar" asp-controller="Cliente" method="POST">
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label for="Razaosocial" class="form-label">Razão Social</label>
                            <input type="text" class="form-control" id="Razaosocial" name="Razaosocial" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="Cnpj" class="form-label">CNPJ</label>
                            <input type="text" maxlength="14" class="form-control" id="Cnpj" name="Cnpj"
                                placeholder="Apenas números" required>
                        </div>
                        <div class="col-md-6">
                            <label for="Email" class="form-label">E-mail</label>
                            <input type="email" class="form-control" id="Email" name="Email" required>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="Codcliente" class="form-label">Insira um código de identificacao</label>
                            <input type="text" maxlength="10" class="form-control" id="Codcliente" name="Codcliente">
                    <div class="row mb-3">
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success btn-lg me-2">Salvar Cliente</button>
                        <a href="index.html" class="btn btn-secondary btn-lg">Cancelar</a>
                    </div>
                </form>
    </div>
 
    <!-- Cards de Acesso Rápido -->
 
 
    <!-- Tabela de Clientes -->
    <h2 class="mt-5 mb-3">Lista de Clientes Cadastrados</h2>
    <div class="carta">
        <table class="table table-striped table-hover align-middle shadow-sm">
            <thead>
                <tr class="table-primary">
                <th scope="col">Nome do Cliente</th>
                    <th scope="col">CPF/CNPJ</th>
                    <th scope="col">Codigo Cliente</th>
                    <th scope="col">Email</th>
                    <th scope="col">Situação</th>
                    <th scope="col">Ação</th>
                </tr>
            </thead>
            <tbody>

                @if( ViewBag.ListaClientes != null &&  ViewBag.ListaClientes.Count > 0)
                {
                    @foreach(Cliente cliente in  ViewBag.ListaClientes)
                    {
                     <tr>
                        <td>@cliente.Razaosocial</td>
                        <td>@cliente.Cnpj</td>
                        <td>@cliente.Codcliente</td>
                        <td>@cliente.Email</td>
                        <td><span class="badge bg-success">Ativo</span></td>
                        <td>
                            <a href="ataualizar" class="btn btn-sm btn-info text-white me-1">Editar</a>
                            <button class="btn btn-sm btn-danger">Excluir</button>
                        </td>
                    </tr>   
                    }
                }
            </tbody>
        </table>
    </div>
</main>
